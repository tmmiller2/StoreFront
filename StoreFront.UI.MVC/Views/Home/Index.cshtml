@{
    ViewData["Title"] = "Home Page";
}

<!-- slider section -->
<section class=" slider_section position-relative">
    <div class="slider_number-container ">
        <div class="number-box">
            <span>
                01
            </span>
            <hr>
            <span>
                02
            </span>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="col-lg-6 col-md-8">
                            <div class="detail_box">
                                <h2>
                                    Welcome!
                                </h2>
                                <h1>
                                    Rocket League Item Shop
                                </h1>
                                <p>
                                    You want it? We have it! The one-stop shop for all of the items you could want in Rocket League! Check out
                                    our amazing deals that don't make it to the in-game item shop! This is the best shop for Rocket League items!
                                </p>
                                <div>
                                    <a href="@Url.Action("Index", "Products")">Buy Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="col-lg-6 col-md-8">
                            <div class="detail_box">
                                <h2>
                                    Our Goal:
                                </h2>
                                <h1>
                                    Customer satisfaction is our #1 priority!
                                </h1>
                                <p>
                                    Register an account with us to make purchases on our site! We appreciate you doing business with 
                                    us and want to keep our customers happy! Your business is what keeps us motivated to update you with 
                                    all new content. Learn more about our company below!
                                </p>
                                @*<div>
                                    <a href="@Url.Action("")">Register Here!</a>
                                </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="col-lg-6 col-md-8">
                            <div class="detail_box">
                                <h2>
                                    Questions or Concerns?
                                </h2>
                                <h1>
                                    Your feedback is important to us!
                                </h1>
                                <p>
                                    Feel free to leave a message on our Contact Us page and we will get back with you as soon as possible! Please 
                                    fill out the form entirely so we can get an appropriate answer back to you!
                                </p>
                                <div>
                                    <a href="">Contact Us Now!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel_btn-container">
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- end slider section -->
  </div>




<!-- why section -->
<section class="why_section layout_padding">
    <div class="section_number">
        01
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>
                    Why Choose Us
                </h2>
                <p>
                    We have been rated the Top Items Seller Site for <span id="displayYear"></span>! We have all of the items that 
                    every player does not want to trade, and those items can be yours now too! Our prices are reasonable and you can 
                    show off your new items to other players! You will receive your product within 24 hours of your purchase or your 
                    money back guaranteed! @*Read more about our company by clicking on the button below!*@
                </p>
                @*<div>
                    <a href="@Url.Action("")">
                        Read More
                    </a>
                </div>*@
            </div>
        </div>
    </div>
</section>

<!-- end why section -->
<!-- client section -->

<section class="client_section layout_padding">
    <div class="container">
        <div class="heading_container justify-content-center">
            <h2>
                What Our Customers Say
            </h2>
            <div class="section_number">
                02
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="client_box">
                    <div class="detail_box">
                        <div class="img_box">
                            <img src="images/client-1.png">
                        </div>
                        <h5>
                            John Smith
                        </h5>
                        <p>
                            These are the items I have been looking for! Thanks to Rocket League Item Shop, 
                            I can now customize my car exactly how I want to!
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="client_box">
                    <div class="detail_box">
                        <div class="img_box">
                            <img src="images/client-2.png">
                        </div>
                        <h5>
                            Mike Jones
                        </h5>
                        <p>
                            There is no other online store around with items as good as these! You will find anything
                            to get the upper edge (cosmetically) over your opponents!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- end client section -->
<!-- arrange section -->

<section class="arrange_section">
    <div class="container">
        <div class="detail_box">
            <h2>
                Our Message
            </h2>
            <p>
                We appreciate you choosing us to find the items you have been looking for! We keep our site updated regularly, adding 
                new items soon after they release in the game. Thank you for doing business with us!
            </p>
        </div>
    </div>
</section>



<!-- end arrange section -->
