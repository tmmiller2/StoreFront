@*
    This is a model declaration. Each View can only have ONE model tied to it.
    The model declaration endures this View knows how to display and send info
    using the provided model.
*@

@model StoreFront.UI.MVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<!-- ======= Main ======= -->
    <main id="main">

        <!-- ======= Confirmation Section ======= -->
        <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
            <div class="container">

                <div class="row">

                    <div class="section-title">
                        <h1>Email Confirmation</h1>
                    </div>

                </div>

                <div class="row">

                    <div class="col-lg-12">

                        <div class="info-box">
                            <i class="bx bx-check-circle"></i>
                            <h2>Message Sent!</h2>
                            <p>
                                Thank you for contacting us! A member of our team will respond 
                                to your message using the provided email address, @Model.Email, 
                                in the next 1-3 business days.
                            </p>

                            <br />

                            <div class="offset-3 col-md-6 text-center">
                                <p>
                                    You sent the following message on 
                                    @DateTime.Now.Date.ToShortDateString() at
                                    @DateTime.Now.ToShortTimeString() : 
                                </p>
                            </div>

                            <br />

                            <div class="offset-3 col-md-6">
                                <p>
                                    <em>@Model.Message</em>
                                </p>
                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </section><!-- End Confirmation Section -->
        </main><!-- End Main -->


@section Scripts {

            <!-- jQuery Library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
